@using GestorPaciente.Core.Application.ViewModels.Patient;
@model PatientSaveViewModel
@{

    ViewData["Title"] = "Paciente || Eliminar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Seguro que deseas eliminar la paciente '@Model.Name'</h1>
                    <form method="post" asp-controller="Patient" asp-action="DeletePost">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger">
                                Aceptar
                            </button>
                            <a class="btn btn-warning ml-2" asp-controller="Patient" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


